<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarContraseniaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/logo2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Enviar Link para \n Recuperar Contraseña"
                android:textColor="@color/linktext"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="Correo"
                android:inputType="text"
                android:textColor="@color/inputtext">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/icon_user"
                    android:inputType="phone"
                    android:textColorHint="@color/inputtext"
                    android:textSize="16dp" />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Recuperar Contraseña"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/button"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>